<h1>Edit Cheese @ViewBag.cheese.Name (id=@ViewBag.cheese.CheeseId)</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Type</label>
        <input name="Name" id="Name" value="@ViewBag.cheese.Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" name="Description" id="Description" value="@ViewBag.cheese.Description" />
    </div>
    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
    <input type="submit" value="Edit Cheese" />
</form>